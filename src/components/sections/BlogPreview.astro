---
import { getCollection } from 'astro:content';

// Get latest 3 blog posts
const posts = await getCollection('blog');
const latestPosts = posts
  .sort((a, b) => {
    const dateA = new Date(a.data.publishDate).getTime();
    const dateB = new Date(b.data.publishDate).getTime();
    return dateB - dateA;
  })
  .slice(0, 3);

// Format date helper
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
}
---

<section id="blog" class="section blog-preview-section">
  <div class="container">
    <div class="section-main-header animate-on-scroll">
      <h2 class="section-title">Artykuły</h2>
      <p class="section-description">
        Dzielimy się wiedzą prawniczą, poradami i aktualnościami. Przeczytaj
        nasze najnowsze artykuły.
      </p>
    </div>

    <div class="blog-preview-grid">
      {
        latestPosts.map((post, index) => (
          <div
            class="blog-preview-card-wrapper animate-on-scroll animate-left"
            style={`transition-delay: ${index * 0.1}s`}
          >
            <a href={`/blog/${post.slug}`} class="blog-preview-card">
              <div class="blog-preview-image">
                <img
                  src={post.data.image}
                  alt={post.data.imageAlt}
                  loading="lazy"
                  width="800"
                  height="600"
                />
                <div class="blog-preview-overlay">
                  <span class="blog-preview-category">
                    {post.data.category}
                  </span>
                </div>
              </div>
              <div class="blog-preview-content">
                <div class="blog-preview-meta">
                  <span class="blog-preview-date">
                    {formatDate(new Date(post.data.publishDate))}
                  </span>
                </div>
                <h3 class="blog-preview-title">{post.data.title}</h3>
                <p class="blog-preview-description">{post.data.description}</p>
                <span class="blog-preview-readmore">
                  Czytaj więcej
                  <svg
                    width="16"
                    height="16"
                    viewBox="0 0 16 16"
                    fill="none"
                    stroke="currentColor"
                  >
                    <path
                      d="M6 3l5 5-5 5"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </span>
              </div>
            </a>
          </div>
        ))
      }
    </div>

    <div class="blog-preview-cta animate-on-scroll">
      <a href="/blog" class="btn-outline">
        Zobacz wszystkie artykuły
        <svg
          width="20"
          height="20"
          viewBox="0 0 20 20"
          fill="none"
          stroke="currentColor"
        >
          <path
            d="M7.5 5l5 5-5 5"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .blog-preview-section {
    background: white;
  }

  .blog-preview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    .blog-preview-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  .blog-preview-card-wrapper {
    transition: all 0.25s ease;
    height: 100%;
  }

  .blog-preview-card-wrapper:hover {
    transform: translateY(-8px);
  }

  .blog-preview-card-wrapper:hover .blog-preview-card {
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border-color: rgba(196, 165, 116, 0.3);
  }

  .blog-preview-card {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    border: 1px solid #e5e7eb;
    height: 100%;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: all 0.25s ease;
    position: relative;
  }

  .blog-preview-image {
    position: relative;
    width: 100%;
    height: 240px;
    overflow: hidden;
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    border-radius: 1.5rem 1.5rem 0 0;
  }

  .blog-preview-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-preview-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4) 0%,
      transparent 50%
    );
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 1.5rem;
  }

  .blog-preview-category {
    background: rgba(255, 255, 255, 0.95);
    color: #c4a574;
    padding: 0.375rem 0.875rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(196, 165, 116, 0.2);
  }

  .blog-preview-content {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .blog-preview-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .blog-preview-date {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
  }

  .blog-preview-title {
    font-family: Georgia, serif;
    font-size: 1.375rem;
    font-weight: 600;
    line-height: 1.4;
    color: #111827;
    margin: 0;
    transition: color 0.3s ease;
  }

  .blog-preview-card-wrapper:hover .blog-preview-title {
    color: #c4a574;
  }

  .blog-preview-description {
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }

  .blog-preview-readmore {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #c4a574;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .blog-preview-card-wrapper:hover .blog-preview-readmore {
    gap: 0.75rem;
  }

  .blog-preview-readmore svg {
    transition: transform 0.3s ease;
  }

  .blog-preview-card-wrapper:hover .blog-preview-readmore svg {
    transform: translateX(0.25rem);
  }

  .blog-preview-cta {
    text-align: center;
    margin-top: 2rem;
  }
</style>
