          <div class="service-card-header">
            <picture>
              <source media="(max-width: 768px)" srcset="/ochrona-praw-zwierzat-mobile.webp" width="600" height="400">
              <img src="/ochrona-praw-zwierzat.webp" alt="" loading="lazy" width="1920" height="1280" class="service-card-bg">
